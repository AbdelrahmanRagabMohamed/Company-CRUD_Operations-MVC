@model DepartementViewModel
@{
    ViewData["Title"] = "Create";
}

<h1 class="text-info">Create New Departement</h1>
<br />

<form asp-action="Create" enctype="multipart/form-data">


    <div class="form-group">
       @*  <label class="col-form-label">Code</label> *@
        @* <input class=" form-control" type="text" name="Code"/> *@


        @*Image*@
        <div class="form-group">
            <label class="col-form-label" asp-for="file"></label>
            <input class=" form-control" asp-for="file" />
        </div>


        <label class="col-form-label"asp-for="Code"></label>
        <input class=" form-control" asp-for="Code"/>
        <span asp-validation-for="Code"class="text-danger"></span>
    </div>

    <div class="form-group">       
        <label class="col-form-label" asp-for="Name"></label>
        <input class=" form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input class=" form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

     <input type="submit" name="Submit" class="btn-primary" />              @*Submit*@

    <a asp-action="Index" asp-controller="Departement">| Back To List</a>  @*Back To List*@

</form>

