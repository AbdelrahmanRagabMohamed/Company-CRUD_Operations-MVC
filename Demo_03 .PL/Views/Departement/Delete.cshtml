@model DepartementViewModel
@{
    ViewData["Title"] = "Delete";
}

<h1>Are You Sure To Delete @Model.Name Departement !</h1>

<br />

<div asp-validation-summary="All">  </div>

<form asp-action="Delete">
    <div class="form-group">

        <label class="col-form-label" asp-for="Code"></label>
        <input readonly class=" form-control" asp-for="Code" />
        <span asp-validation-for="Code" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="Name"></label>
        <input readonly class=" form-control" asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="DateOfCreation"></label>
        <input readonly class=" form-control" asp-for="DateOfCreation" />
        <span asp-validation-for="DateOfCreation" class="text-danger"></span>
    </div>

    <input type="submit" value="Delete" class="btn btn-danger" /> 

    <a asp-action="Index" asp-controller="Departement" class="btn-outline-secondary">| Cancel</a>  @*Back To List*@

</form>


