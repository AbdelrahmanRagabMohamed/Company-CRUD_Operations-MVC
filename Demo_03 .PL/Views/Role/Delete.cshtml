@model RoleViewModel
@{
    ViewData["Title"] = "Delete";
}

<h3 class="alert-danger rounded">Are You Sure To Delete @Model.RoleName With Id: @Model.Id !</h3>

<br />

<form asp-action="ConfirmDelete">
    <div class="form-group">
        <label class="col-form-label" asp-for="Id"></label>
        <input readonly class=" form-control" asp-for="Id" />
    </div>

    <div class="form-group">
        <label class="col-form-label" asp-for="RoleName"></label>
        <input readonly class=" form-control" asp-for="RoleName" />
    </div>


    <input type="submit" value="Delete" class="btn btn-danger" />
    <a class="alert-light text-body" asp-action="Index" asp-controller="Role">|  Back To List</a>

</form>