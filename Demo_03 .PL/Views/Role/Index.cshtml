@model IEnumerable<RoleViewModel>

@{
    //ViewData["Title"] = "Index";
    ViewData["Title"] = "Roles";
}

<a asp-action="Create" class="btn btn-success list-group-item-success"> Add New Role </a>


<p></p>
<p></p>


@if (!string.IsNullOrEmpty(ViewBag.Message as string))
{
    <p>@ViewBag.Message</p>
}

@if (Model.Count() > 0)
{
    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="Role's Name" />
            </div>

            <div class="col-4">
                <input type="submit" class="btn btn-outline-success" value="Search" />
            </div>
        </form>
    </div>

    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(R => R.Id)</td>
                <td>@Html.DisplayNameFor(R => R.RoleName)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var Role in Model)
            {
                <tr>
                    <td>@Role.Id</td>
                    <td>@Role.RoleName</td>
                    <partial name="_ButtonsPartialView" model="@Role.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}
else  // No Roles
{
    <div class="text-center mt-5 alert alert-warning">

        <h2>There is No Roles</h2>

    </div>
}

