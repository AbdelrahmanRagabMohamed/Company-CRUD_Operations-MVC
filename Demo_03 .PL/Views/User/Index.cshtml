@model IEnumerable<UserViewModel>

@{
    //ViewData["Title"] = "Index";
    ViewData["Title"] = "Users";
}



@if (Model.Count() > 0)
{
    @*Search*@

    <div class="m-2">
        <form class="row offset-2" asp-action="Index">
            <div class="col-8">
                <input class="form-control" type="text" name="SearchValue" placeholder="User's Email" />
            </div>

            <div class="col-4">
                <input type="submit" class="btn btn-outline-success" value="Search" />
            </div>
        </form>
    </div>


    <table class="table table-striped table-hover mt-5">
        <thead>
            <tr>
                <td>@Html.DisplayNameFor(U => U.Id)</td>
                <td>@Html.DisplayNameFor(U => U.Fname)</td>
                <td>@Html.DisplayNameFor(U => U.Lname)</td>
                <td>@Html.DisplayNameFor(U => U.Email)</td>
                <td>@Html.DisplayNameFor(U => U.PhoneNumber)</td>
                <td>@Html.DisplayNameFor(U => U.Roles)</td>
                <td>Details</td>
                <td>Update</td>
                <td>Delete</td>
            </tr>
        </thead>
        <tbody>
            @foreach (var User in Model)
            {
                <tr>
                    <td>@User.Id</td>
                    <td>@User.Fname</td>
                    <td>@User.Lname</td>
                    <td>@User.Email</td>
                    <td>@User.PhoneNumber</td>
                    <td>@string.Join(",", User.Roles)</td>
                    <partial name="_ButtonsPartialView" model="@User.Id"></partial>
                </tr>
            }
        </tbody>
    </table>
}

else  // No Users
{
    <div class="text-center mt-5 alert alert-warning">

        <h2>There is No Users</h2>

    </div>
}